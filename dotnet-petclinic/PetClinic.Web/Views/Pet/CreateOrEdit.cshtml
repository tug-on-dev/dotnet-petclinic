@model Pet

@{
    var isEdit = ViewBag.IsEdit ?? false;
    var owner = ViewBag.Owner as Owner;
    ViewData["Title"] = isEdit ? "Edit Pet" : "New Pet";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <h2>@ViewData["Title"]</h2>
        <p class="text-muted">Owner: @owner?.FirstName @owner?.LastName</p>

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <form asp-action="@(isEdit ? "Edit" : "Create")" method="post" class="mt-4">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="OwnerId" />
            
            <div class="mb-3">
                <label asp-for="Name" class="form-label">Pet Name</label>
                <input type="text" name="name" value="@Model.Name" class="form-control" placeholder="Enter pet name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="BirthDate" class="form-label">Birth Date</label>
                <input type="date" name="birthDate" value="@Model.BirthDate.ToString("yyyy-MM-dd")" class="form-control" />
                <span asp-validation-for="BirthDate" class="text-danger"></span>
                <div class="form-text">Birth date cannot be in the future.</div>
            </div>

            <div class="mb-3">
                <label asp-for="TypeId" class="form-label">Pet Type</label>
                <select name="type" class="form-select" asp-items="ViewBag.PetTypes">
                    <option value="">-- Select Pet Type --</option>
                </select>
                <span asp-validation-for="TypeId" class="text-danger"></span>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check-circle"></i> @(isEdit ? "Update Pet" : "Add Pet")
                </button>
                <a asp-controller="Owner" asp-action="Details" asp-route-id="@Model.OwnerId" class="btn btn-secondary">
                    Cancel
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
