@model PetClinic.Web.Models.Owner

@{
    ViewData["Title"] = Model.Id == 0 ? "Add Owner" : "Edit Owner";
    var isEdit = Model.Id != 0;
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <h2>@ViewData["Title"]</h2>
        
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <strong>Please correct the following errors:</strong>
                <ul class="mb-0">
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <li>@error.ErrorMessage</li>
                    }
                </ul>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        
        <form asp-action="@(isEdit ? "Edit" : "Create")" method="post" class="mt-4">
            @if (isEdit)
            {
                <input type="hidden" asp-for="Id" />
            }
            
            <div class="mb-3">
                <label asp-for="FirstName" class="form-label"></label>
                <input type="text" name="firstName" value="@Model.FirstName" class="form-control" placeholder="Enter first name" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            
            <div class="mb-3">
                <label asp-for="LastName" class="form-label"></label>
                <input type="text" name="lastName" value="@Model.LastName" class="form-control" placeholder="Enter last name" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            
            <div class="mb-3">
                <label asp-for="Address" class="form-label"></label>
                <input type="text" name="address" value="@Model.Address" class="form-control" placeholder="Enter address" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            
            <div class="mb-3">
                <label asp-for="City" class="form-label"></label>
                <input type="text" name="city" value="@Model.City" class="form-control" placeholder="Enter city" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            
            <div class="mb-3">
                <label asp-for="Telephone" class="form-label"></label>
                <input type="text" name="telephone" value="@Model.Telephone" class="form-control" placeholder="Enter 10-digit telephone" />
                <span asp-validation-for="Telephone" class="text-danger"></span>
                <small class="form-text text-muted">Must be 10 digits</small>
            </div>
            
            <div class="d-grid gap-2 d-md-flex">
                <button type="submit" class="btn btn-primary">
                    @(isEdit ? "Update Owner" : "Add Owner")
                </button>
                @if (isEdit)
                {
                    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">Cancel</a>
                }
                else
                {
                    <a asp-action="Find" class="btn btn-secondary">Cancel</a>
                }
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
